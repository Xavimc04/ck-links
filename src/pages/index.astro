---

import Template from '../layouts/template.astro'
import Icon from '../components/icon.astro'

---

<Template>
	<section class="absolute flex flex-col gap-5 z-20 text-white top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
		<Icon />

		<button type="button" class="text-white bg-[#FF9119] shadow shadow-orange-500/50 focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex gap-4 items-center hover:bg-[#FF9119]/80 focus:ring-[#FF9119]/40 me-2 mb-2">
			<span class="material-symbols-outlined text-sm">
				public
			</span>

			Acceder
		</button>
	</section>
</Template>
